{
    "name": "nest-home-backend",
    "version": "0.1.5",
    "description": "Nest Home Backend",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
        "start:debug": "nodemon --config nodemon-debug.json",
        "prestart:prod": "rimraf dist && npm run build",
        "start:prod": "node dist/main.js",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "deploy": "pm2 deploy ../ecosystem.json prod-backend"
    },
    "dependencies": {
        "@nestjs/common": "^7.6.5",
        "@nestjs/config": "^0.5.0",
        "@nestjs/core": "^7.6.5",
        "@nestjs/microservices": "^7.6.5",
        "@nestjs/platform-express": "^7.6.5",
        "@nestjs/platform-socket.io": "^7.6.5",
        "@nestjs/schedule": "^0.4.1",
        "@nestjs/typeorm": "^7.1.5",
        "@nestjs/websockets": "^7.6.5",
        "cacheable-lookup": "^6.0.2",
        "mysql": "^2.18.1",
        "nest-winston": "^1.6.1",
        "reflect-metadata": "0.1.13",
        "rimraf": "2.6.3",
        "ring-client-api": "^9.22.0",
        "rxjs": "6.4.0",
        "typeorm": "^0.2.37",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@nestjs/testing": "^8.0.11",
        "@types/express": "4.16.1",
        "@types/jest": "24.0.11",
        "@types/node": "16.10",
        "@types/socket.io": "^2.1.4",
        "@types/supertest": "2.0.7",
        "axios-mock-adapter": "^1.16.0",
        "concurrently": "^5.3.0",
        "jest": "^26.6.3",
        "nodemon": "^2.0.7",
        "prettier": "1.17.0",
        "supertest": "4.0.2",
        "ts-jest": "^26.4.4",
        "ts-node": "^8.1.0",
        "tsconfig-paths": "3.8.0",
        "tslint": "5.16.0",
        "typescript": "^3.8.3",
        "wait-on": "^3.2.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
