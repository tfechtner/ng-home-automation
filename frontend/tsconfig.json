{
    "compileOnSave": false,
    "compilerOptions": {
        "importHelpers": true,
        "module": "esnext",
        "baseUrl": "src",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "resolveJsonModule": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "plugins": [],
        "paths": {
            "@backend/*": ["../../backend/src/*"],
            "@environment/*": ["environments/*"],
            "@models/*": ["app/@models/*"],
            "@services/*": ["app/@services/*"],
            "@utils/*": ["app/@utils/*"]
        }
    }
}
