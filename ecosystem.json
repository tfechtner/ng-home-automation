{
    "apps": [{
        "name": "nest-home-backend-server",
        "script": "dist/backend/src/main.js",

        "args": "one two",
        "instances": 1,
        "autorestart": true,
        "watch": false,
        "max_memory_restart": "1G",
        "env": {
            "NODE_ENV": "development"
        },
        "env_production": {
            "NODE_ENV": "production"
        }
    }],

    "deploy": {
        "production": {
            "user": "work",
            "host": ["192.168.0.44"],
            "ref": "origin/develop",
            "repo": "git@tfechtner-Github:tfechtner/ng-home-automation.git",
            "path": "/Users/work/Workspace/ng-home-automation",
            "post-deploy": "echo 'Node:' && node -v && cd backend && pwd"
        }
    }
}
